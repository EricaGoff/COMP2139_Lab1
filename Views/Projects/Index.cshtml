@model IEnumerable<COMP2139_Lab1.Models.Project>

@{
    ViewData["Title"] = "Projects 💖";
    Layout = "_Layout";
}

<div class="text-center mt-5">
    <h1 style="color:#ff4d94;">My Projects 💻</h1>
    <p class="mt-3">Here’s a list of all projects created ✨</p>

    <a asp-action="Create" class="btn btn-light border rounded-pill px-4 mt-3" 
       style="color:#ff4d94; border-color:#ff4d94;">
        <i class="fa-solid fa-plus"></i> Add New Project
    </a>
</div>

@if (!Model.Any())
{
    <p class="text-center mt-4" style="color:#ff4d94;">No projects yet! Create one above 💕</p>
}
else
{
    <table class="table table-striped mt-4">
        <thead style="color:#ff4d94;">
        <tr>
            <th>Name</th>
            <th>Owner</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>@project.Name</td>
                <td>@project.Owner</td>
                <td>@project.StartDate.ToShortDateString()</td>
                <td>@project.EndDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@project.Id" 
                       class="btn btn-sm btn-light border rounded-pill" 
                       style="color:#ff4d94; border-color:#ff4d94;">
                        <i class="fa-solid fa-eye"></i> View
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}